<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:weightSum="20"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.8"
        android:weightSum="10"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/cactusText"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4.45"
            android:autoSizeTextType="uniform"
            android:text="품목을 입력하세요"
            android:textAlignment="center"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/counterText"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.55"
            android:autoSizeTextType="uniform"
            android:text=""
            android:textAlignment="center"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout android:id="@+id/linear1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="13.2"
        android:background="@drawable/border"
        android:weightSum="10">

        <ListView
            android:id="@+id/cactusListView"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4.5"/>

        <ListView
            android:id="@+id/counterListView"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.5"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:orientation="vertical"
            android:weightSum="60">
            <Button
                android:onClick="addButton_onClick"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="10"
                android:layout_margin="15dp"
                android:text="추가"
                android:textSize="20sp"/>
            <Button
                android:onClick="resetButton_onClick"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="10"
                android:layout_margin="15sp"
                android:text="초기화"
                android:textSize="20sp" />
            <Button
                android:onClick="printButton_onClick"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="10"
                android:layout_margin="15dp"
                android:text="인쇄"
                android:textSize="20sp" />
            <Button
                android:onClick="connectButton_onClick"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="10"
                android:layout_margin="15dp"
                android:text="재연결"
                android:textSize="20sp" />
            <Button
                android:onClick="cactusEditButton_onClick"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="10"
                android:layout_margin="15dp"
                android:text="목록 수정"
                android:textSize="20sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="10"
                android:orientation="horizontal"
                android:weightSum="10">

                <TextView
                    android:id="@+id/totalCountText"
                    android:layout_width="0dp"
                    android:layout_weight="2.5"
                    android:layout_height="match_parent"
                    android:text="0"
                    android:textAlignment="center"
                    android:gravity="center"
                    android:textSize="20sp"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:text="개"
                    android:textAlignment="center"
                    android:gravity="center"
                    android:textSize="20sp"/>

                <TextView
                    android:id="@+id/totalSumText"

                    android:layout_width="0dp"
                    android:layout_weight="5.5"
                    android:layout_height="match_parent"
                    android:text="0"
                    android:textAlignment="center"
                    android:gravity="center"
                    android:textSize="20sp"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:text="원"
                    android:textAlignment="center"
                    android:gravity="center"
                    android:textSize="20sp"/>



            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="6"
        android:orientation="vertical"
        android:weightSum="10">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.3"
            android:weightSum="20">
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:text="이름"
                android:textColor="@color/colorPrimary"
                android:textAlignment="center"
                android:gravity="center"
                android:textSize="15sp" />
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:text="수량"
                android:textColor="@color/colorPrimary"
                android:textAlignment="center"
                android:gravity="center"
                android:textSize="15sp" />
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:text="단가"
                android:textColor="@color/colorPrimary"
                android:textAlignment="center"
                android:gravity="center"
                android:textSize="15sp" />
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4.5"
                android:text="금액"
                android:textColor="@color/colorPrimary"
                android:textAlignment="center"
                android:gravity="center"
                android:textSize="15sp" />

        </LinearLayout>

        <ListView
            android:id="@+id/basketListView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="8.7"
            android:background="@drawable/border"/>
    </LinearLayout>

</LinearLayout>